<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>multiPartServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.MultiPartServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>simpleFormServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.SimpleFormServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>streamServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.StreamServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>webdav</servlet-name>
    <servlet-class>ru.timtish.bridge.web.WebDavServlet</servlet-class>
    <init-param>
      <param-name>debug</param-name>
      <param-value>0</param-value>
    </init-param>
    <init-param>
      <param-name>listings</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>allowSpecialPaths</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>readonly</param-name>
      <param-value>false</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>multiPartServlet</servlet-name>
    <url-pattern>/put_mp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>simpleFormServlet</servlet-name>
    <url-pattern>/put_txt</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>streamServlet</servlet-name>
    <url-pattern>/put_st</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>multiPartServlet</servlet-name>
    <url-pattern>/get</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>streamServlet</servlet-name>
    <url-pattern>/big</url-pattern>
  </servlet-mapping>



  <servlet-mapping>
    <servlet-name>webdav</servlet-name>
    <url-pattern>/webdav/*</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
