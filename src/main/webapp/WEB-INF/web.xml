<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>WEB-INF/context.xml</param-value>
    <!--<param-value>classpath:WEB-INF/context.xml</param-value>-->
  </context-param>

  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>multiPartServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.MultiPartImportServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>simpleFormServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.UrlEncodedImportServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>simpleStreamServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.SimpleStreamServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>urlStreamServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.UrlImportServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>zipExportServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.ZipExportServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>mailExportServlet</servlet-name>
    <servlet-class>ru.timtish.bridge.web.MailServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>webdav</servlet-name>
    <servlet-class>ru.timtish.bridge.web.WebDavServlet</servlet-class>
    <init-param>
      <param-name>debug</param-name>
      <param-value>0</param-value>
    </init-param>
    <init-param>
      <param-name>listings</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>allowSpecialPaths</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>readonly</param-name>
      <param-value>false</param-value>
    </init-param>
  </servlet>

  <!-- in connectors -->

  <servlet-mapping>
    <servlet-name>multiPartServlet</servlet-name>
    <url-pattern>/put_mp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>simpleFormServlet</servlet-name>
    <url-pattern>/put_txt</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>simpleStreamServlet</servlet-name>
    <url-pattern>/put_file</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>urlStreamServlet</servlet-name>
    <url-pattern>/put_st</url-pattern>
  </servlet-mapping>

  <!-- out connectors -->

  <servlet-mapping>
    <servlet-name>simpleStreamServlet</servlet-name>
    <url-pattern>/get</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>zipExportServlet</servlet-name>
    <url-pattern>/zip</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>mailExportServlet</servlet-name>
    <url-pattern>/mail</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>webdav</servlet-name>
    <url-pattern>/webdav/*</url-pattern>
  </servlet-mapping>

  <!-- test stream -->

  <servlet-mapping>
    <servlet-name>urlStreamServlet</servlet-name>
    <url-pattern>/big</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>/index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
